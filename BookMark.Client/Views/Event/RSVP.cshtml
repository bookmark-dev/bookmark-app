@model BookMark.Client.Models.EventViewModel

@if (@Model != null)
{
  <h1>@Model.Name</h1>

  @if(@Model.Organization != null)
  {
    <p>Event Organizer: @Model.Organization.Name</p>
  }

  <p>Event Date and Time: @Model.DateTime</p>

  <p>Event Location: @Model.Location</p>
  
  <p>Event Information: @Model.Info</p>

  @if(@Model.UserEvents != null)
  {
    <p>RSVPs: @Model.UserEvents.Count()</p>
  }

  @Html.ActionLink("RSVP", "RSVPConfirmation", new { id = @Model.EventID })
}
else
{
  <p>Error</p>
}
