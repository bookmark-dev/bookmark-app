@model BookMark.Client.Models.OrganizationViewModel

<h1>Register as an Organization</h1>

<p>@ViewData["RegErr"]</p>

<form action="/organization/register" method="POST">
	@Html.AntiForgeryToken()
	<label asp-for="@Model.Name">Name</label>
	<input type="text" asp-for="@Model.Name" placeholder = "Organization Name">
	@Html.ValidationMessageFor(ovm => ovm.Name)
  <br />
	<label asp-for="@Model.Email">Email</label>
	<input type="email" asp-for="@Model.Email" placeholder = "Email">
	@Html.ValidationMessageFor(ovm => ovm.Email)
  <br/>
	<label asp-for="@Model.Password">Password</label>
	<input type="password" asp-for="@Model.Password" placeholder = "Password">
	@Html.ValidationMessageFor(ovm => ovm.Password)
  <br/>
	<button type="submit">Register</button>
</form>